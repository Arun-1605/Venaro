<div class="row pb-3">
	@foreach (var product in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
					<div class="card">
						<div class="card-body">

							<img src="@product.Image" class="card-img-top rounded" />
							<div class="pl-1">
								<p class="card-title h10 text-primary">@product.Name</p>
								@*<p class="card-title text-info">by <b>@product.Author</b></p>*@
							</div>
							<div class="pl-1">
								<p class="text-danger">List Price: <strike><b>Rs.@product.ListPrice.ToString("0.00")</b></strike></p>
							</div>
							<div class="pl-1">
								<p class="text-success">As low as: <b>Rs.@product.Price.ToString("0.00")</b></p>
							</div>
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
							Details
						</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>